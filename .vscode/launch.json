{
  "version": "1.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF Command",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["apps", "--help"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: apps",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["apps"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: apps (fullstatus)",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["apps", "--full-status"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: new",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["new", "--help"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: show",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["show", "--app", "porta-dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: apps (runtime args)",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--loader=ts-node/esm",
        "--experimental-specifier-resolution=node",
        "--no-warnings=ExperimentalWarning"
      ],
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["apps"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: update",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["update", "--app", "${input:appName}", "${input:paramName}", "${input:paramValue}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: stack",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["stack", "--app", "${input:appName}", "${input:cdkCommand}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: update (delete)",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["update", "--app", "${input:appName}", "--delete", "${input:paramName}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug OCLIF: update (help)",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "AWS_SDK_JS_SUPPRESS_MAINTENANCE_MODE_MESSAGE": "1",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/bin/dev.js",
      "args": ["update", "--help"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: current file",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true",
        "NODE_OPTIONS": "--loader=ts-node/esm --experimental-specifier-resolution=node"
      },
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
        "${file}", 
        "--config=.mocharc.json",
        "--timeout=60000"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "outputCapture": "std",
      "windows": {
        "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: current file (fallback)",
      "env": {
        "TS_NODE_TRANSPILE_ONLY": "true",
        "TS_NODE_FILES": "true"
      },
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--loader=ts-node/esm",
        "--experimental-specifier-resolution=node",
        "--max-old-space-size=4096"
      ],
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
        "${file}",
        "--require=test/hooks.ts"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ]
    }
  ],
  "inputs": [
    {
      "id": "cdkCommand",
      "description": "CDK command",
      "default": "deploy",
      "type": "promptString"
    },
    {
      "id": "appName",
      "description": "App name",
      "default": "porta-dev",
      "type": "promptString"
    },
    {
      "id": "paramName",
      "description": "Parameter name",
      "default": "appImage",
      "type": "promptString"
    },
    {
      "id": "paramValue", 
      "description": "Parameter value",
      "default": "",
      "type": "promptString"
    }
  ]
}
